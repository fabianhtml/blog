{
  "name": "blog-og-images",
  "version": "1.0.0",
  "description": "Generador de imÃ¡genes OG para el blog",
  "main": "dist/generate-og-images.js",
  "scripts": {
    "build": "tsc",
    "generate-og": "npm run build && node dist/generate-og-images.js",
