{
  "name": "blog-og-images",
  "version": "1.0.0",
  "description": "Generador de imÃ¡genes OG para el blog",
  "main": "dist/generate-og-images.js",
  "scripts": {
    "build": "tsc",
    "generate-og": "bun scripts/generate-og-images.ts",
    "generate-og:node": "tsc && node dist/generate-og-images.js",
    "dev": "tsc -w",
    "prepare": "husky",
    "setup": "bun install && bun run generate-og",
    "ci:build": "bun scripts/generate-og-images.ts && hugo --gc --minify",
    "ci:build:node": "tsc && node dist/generate-og-images.js && hugo --gc --minify",
    "blog:build": "bun run generate-og && hugo --minify",
    "blog:dev": "hugo server -D"
  },
  "dependencies": {
    "puppeteer": "^22.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.23",
    "husky": "^9.1.7",
    "typescript": "^5.0.0"
  },
  "type": "module"
}
